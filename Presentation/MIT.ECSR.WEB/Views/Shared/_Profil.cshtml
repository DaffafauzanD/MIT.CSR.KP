@using MIT.ECSR.Shared.Attributes
@{
    TokenUserObject token = ViewBag.User;
    bool isVendor = token?.Role?.Name.Contains(MIT.ECSR.Shared.Attributes.RoleName.FORUM.ToString()) ?? false;
}
<div class="modal fade text-left" id="modal_profil" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addProgress-title">Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="mb-4  text-center">General Information</h5>
                        <div>
                            <label class="font-weight-bold mb-0 ">Fullname</label>
                            <div>
                                <input type="text" class="form-control form-control-sm" id="Profile-Fullname" value="@token?.FullName">
                            </div>
                        </div>
                        <div>
                            <label class="font-weight-bold mb-0">Email</label>
                            <div>
                                <input type="text" class="form-control form-control-sm" id="Profile-Email" value="@token?.Mail">
                            </div>
                        </div>
                        <div>
                            <label class="font-weight-bold mb-0">Nomor Telepon</label>
                            <div>
                                <input type="number" class="form-control form-control-sm" id="Profile-NoTelpon" value="@token?.PhoneNumber">
                            </div>
                        </div>
                        @if(isVendor){
                            <div>
                                <label class="font-weight-bold mb-0">Nama Perusahaan</label>
                                <div>
                                    <input type="text" class="form-control form-control-sm" id="Profile-NamaPerusahaan" value="@token?.Company?.Name">
                                </div>
                            </div>
                      
                            <div>
                                <label class="font-weight-bold mb-0">Nib</label>
                                <div>
                                    <input type="text" class="form-control form-control-sm" id="Profile-Nib" value="@token?.Company?.Nib">
                                </div>
                            </div>
                            <div>
                                <label class="font-weight-bold mb-0">Jenis Perseroan</label>
                                <div>
                                    <input type="text" class="form-control form-control-sm" id="Profile-JenisPerseroan" value="@token?.Company?.JenisPerseroan">
                                </div>
                            </div>
                            <div>
                                <label class="font-weight-bold mb-0">Npwp</label>
                                <div>
                                    <input type="text" class="form-control form-control-sm" id="Profile-Npwp" value="@token?.Company?.Npwp">
                                </div>
                            </div>
                             <div>
                                <label class="font-weight-bold mb-0">Bidang usaha</label>
                                <div>
                                    <input type="text" class="form-control form-control-sm" id="Profile-BidangUsaha" value="@token?.Company?.BidangUsaha">
                                </div>
                             </div>
                            <div>
                                <label class="font-weight-bold mb-0">Alamat Perusahaan</label>
                                <div>
                                    <textarea rows="3" class="form-control" id="Profile-AlamatPerusahaan">@token?.Company?.Alamat</textarea>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-sm-6">
                        <h5 class="mb-4  text-center">Login Info</h5>
                        <div>
                            <label class="font-weight-bold mb-0 ">Username</label>
                            <div>
                                <input type="text" class="form-control form-control-sm" id="Profile-Username" value="@token?.Username">
                            </div>
                        </div>
                        <div>
                            <label class="font-weight-bold mb-0 ">Password</label>
                            <div>
                                <input type="password" class="form-control form-control-sm" id="Profile-Password">
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-4 text-center">
                <button class="btn btn-sm btn-success col-md-1" type="button" style="" id="UserExternal-create_btn"> Save</button>
            </div>

        </div>
    </div>
</div>