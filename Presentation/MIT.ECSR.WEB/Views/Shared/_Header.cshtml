@model MIT.ECSR.Shared.Attributes.TokenUserObject

<div class="navbar-header" style="top:0">
    <ul class="nav navbar-nav flex-row">
        @if (Model != null)
        {
            <li class="nav-item mobile-menu d-md-none mr-auto"><a class="nav-link nav-menu-main menu-toggle hidden-xs" href="#"><i class="ft-menu font-large-1"></i></a></li>
        }else
        {
            <li class="nav-item mobile-menu d-md-none mr-auto"><a class="nav-link nav-menu-main menu-toggle hidden-xs" href="https://api.whatsapp.com/send/?phone=6285722315553&amp;text&amp;app_absent=0"><i class="ft-phone-call mr-2"></i></a></li>
        }
        <li class="nav-item">
            <a class="navbar-brand" href="@Url.Action("Index","Home",  new { Area = "" })">
                <div class="media">
                    <img class="brand-logo" alt="CSR" src="@Url.Content("~/Content/images/logo-pemkab.jpeg")">
                    <div class="media-body">
                        <img class="brand-logo" alt="CSR" src="@Url.Content("~/Content/images/logo.png")" style="width: 50px;
    margin-left: 10px;
    margin-top: -2px;">
                    </div>
                </div>
            </a>
        </li>
        <li class="nav-item d-md-none">
            <a class="nav-link open-navbar-container" data-toggle="collapse" data-target="#navbar-mobile"><i class="la la-ellipsis-v"></i></a>
        </li>
    </ul>
</div>
<div class="navbar-container content">
    <div class="collapse navbar-collapse" id="navbar-mobile">

        @if (Model != null)
        {
            <ul class="nav navbar-nav mr-auto float-left">
                <li class="nav-item d-none d-md-block"><a class="nav-link nav-menu-main menu-toggle hidden-xs" href="#"><i class="ft-menu"></i></a></li>
            </ul>
            <ul class="nav navbar-nav float-right">

                <li class="dropdown dropdown-notification nav-item">
                    <a class="nav-link nav-link-label" href="#" data-toggle="dropdown">
                        <i class="ficon ft-bell"></i>
                        <span class="badge badge-pill badge-default badge-danger badge-default badge-up badge-glow" id="count-notification"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-media dropdown-menu-right">
                        <li class="dropdown-menu-header">
                            <h6 class="dropdown-header m-0">
                                <span class="grey darken-2">Notifications</span>
                            </h6>
                            <span class="notification-tag badge badge-default badge-danger float-right m-0" id="count-notification-text"></span>
                        </li>
                        <li class="scrollable-container media-list w-100" id="item-notification">
                        </li>
                        <li class="dropdown-menu-footer"><a class="dropdown-item text-muted text-center" href="javascript:void(0)" onclick="ReadNotification()">Read all notifications</a></li>
                    </ul>
                </li>
                <li class="dropdown dropdown-user nav-item">
                    <a class="dropdown-toggle nav-link dropdown-user-link" href="#" data-toggle="dropdown">
                        <span class="mr-1">
                            <span class="user-name text-bold-700">@Model.FullName</span>
                        </span>
                        <span class="avatar avatar-online">
                            <img src="@Url.Content("~/Content/app-assets/images/portrait/small/avatar-s-19.png")" alt="avatar"><i></i>
                        </span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" data-target="#modal_profil" data-toggle="modal" href="#modal_profil"><i class="ft-user"></i> Profile</a>
                        <div class="dropdown-divider"></div><a class="dropdown-item" href="#" onclick="Logout();"><i class="ft-power"></i> Logout</a>
                    </div>
                </li>
            </ul>
        }
        else
        {
            <ul class="nav navbar-nav mr-auto float-left">
                <li class="nav-item d-none d-md-block">
                    <a class="nav-link nav-menu-main menu-toggle" href="https://api.whatsapp.com/send/?phone=6285722315553&amp;text&amp;app_absent=0">
                        <i class="ft-phone-call mr-2"></i>
                    </a>
                </li>
            </ul>
            <ul class="nav navbar-nav float-right">
                <li class="dropdown dropdown-user nav-item">
                    <a data-target="#modal_login" data-toggle="modal" class="btn btn-info btn-sm" href="#modal_login" style="z-index: 999999;
    position: inherit;">Login</a>
                </li>
            </ul>
        }
    </div>
</div>
