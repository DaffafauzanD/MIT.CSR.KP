@{
    ViewData["Title"] = "Home";
}

<section>
    <div class="row">
        <div class="col-md-12 mb-1">
			<div id="carousel-interval" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
					<li data-target="#carousel-interval" data-slide-to="0" class="active"></li>
					<li data-target="#carousel-interval" data-slide-to="1" class=""></li>
					<li data-target="#carousel-interval" data-slide-to="2" class=""></li>
				</ol>
				<div class="" role="listbox">
					<div class="carousel-item active">
						<img src="/assets/images/carousel/01.jpg" class="img-fluid" width="100%" alt="First slide">
					</div>
					<div class="carousel-item">
						<img src="assets/images/carousel/02.jpg" class="img-fluid" width="100%" alt="First slide">
					</div>
					<div class="carousel-item">
						<img src="assets/images/carousel/03.jpg" class="img-fluid" width="100%" alt="First slide">
					</div>
				</div>
				<a class="carousel-control-prev" href="#carousel-interval" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carousel-interval" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>

        </div>
    </div>

	<div class="col-12">
		<div class="row">
			<div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 my-1">
				<div class="card" id="top_company">
					<div class="card-body">
						<div class="row">
							<div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
								<h3>Top 5 Company CSR</h3>
							</div>
						</div>
						<div class="media-list media-bordered" id="top_company_body">
						</div>
					</div>
				</div>
				<div class="card" id="rekap_program">
					<div class="card-body">
						<div class="media-list">
							<div class="media mt-1 rounded" style="background-color: #CAF1C0;">
								<a class="media-left" href="#">
									<h1 class="text-center">On Progress</h1>
									<h2 class="text-center" id="rekap_program-on_progress">0</h2>
								</a>
								<div class="media-body">
									<h1 class="text-center">Done</h1>
									<h2 class="text-center" id="rekap_program-done">0</h2>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="card col-sm-12 col-md-8 col-lg-8 col-xl-8 my-1">
				@*<div class="card" id="rekap_program">
					<div class="row py-3">
						<div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
							<h1 class="text-center">On Progress</h1>
							<h3 class="text-center" id="rekap_program-on_progress">0</h3>
							<h4 class="text-center" id="rekap_program-on_progress_rupiah">0</h4>
						</div>

						<div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
							<h1 class="text-center">Done</h1>
							<h3 class="text-center" id="rekap_program-done">0</h3>
							<h4 class="text-center" id="rekap_program-done_rupiah">0</h4>
						</div>

					</div>
				</div>*@
				<div class="card card-primary card-outline card-outline-tabs">
					<div class="card-header p-0 border-bottom-0">
						<ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist" style="border-bottom: none !important">
							<li class="nav-item">
								<a class="nav-link" onclick="OnChangeStatus('all')"><h3><span class="program_status badge badge-info" id="program_status_label-all" style="background-color: #ADB4D0  !important;">All</span></h3></a>

							</li>
							<li class="nav-item">
								<a class="nav-link" onclick="OnChangeStatus('done')"><h3><span class="program_status" id="program_status_label-done" style="background-color: #ADB4D0  !important;">Done</span></h3></a>

							</li>
							<li class="nav-item">
								<a class="nav-link" onclick="OnChangeStatus('on_progress')"><h3><span class="program_status" id="program_status_label-on_progress" style="background-color: #ADB4D0  !important;">On Progress</span></h3></a>

							</li>
						</ul>
					</div>
				</div>
				<div class="content-wrapper">
					<div class="row" id="program_list">
						<div class="row" id="show_more_program">
							<div class="col-12 d-flex justify-content-center">
								<button class="btn btn-info" onClick="ListProgram()" hidden>Show More</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/Home/index.js")"></script>
}