@{
    ViewData["Title"] = "Program";
} <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card border-light">
        <div class="card-header  pb-0">
            <div class="row">
                <div class="col-md-6 ">

                    <h3 class="content-header-title">Banner</h3>
                </div>
                <div class="card-header-right col-md-6 ">
                    <div class="btn-group float-md-right">
                        <button class="btn-sm btn-info box-shadow-2 px-2" type="button" data-toggle="modal" data-target="#md-AddBanner"><i class="ft-settings icon-left"></i> Tambah</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="banner-table">
                            <thead class="text-center bg-primary text-white font-heigh-bold">
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">FileName</th>
                                    <th scope="col">CreateBy</th>
                                    <th scope="col">CreateDate</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody id="banner-tbody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row mb-1 justify-content-between">
                <div class="col-md-7 align-self-center">
                    <span class="d-inline-block mr-1">
                        <select class="form-control form-control-sm input-sm" id="banner-page_select" @* onchange="Get_listUser()*@">
                            <option value="5" selected>5</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                        </select>
                    </span>
                    <span>
                        Showing <b id="banner-from_page"></b> To <b id="banner-to_page"></b> From <b id="banner-total"></b> Total Data
                    </span>
                </div>
                <div class="col-md-5 align-self-center">
                    <div class="float-right xs" id="banner-pagination"></div>
                </div>
            </div>
        </div>



        <div class="modal" tabindex="-1" role="dialog" id="md-AddBanner">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-info">
                        <h5 class="modal-title text-white">Upload Picture Ratio (3:1)</h5>
                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="custom-file col-md-12">
                            <input type="file" class="custom-file-input" id="AddBanner-File" onchange="showNameFile();" accept="image/jpg, image/jpeg, image/png">
                            <label class="custom-file-label" for="lampiran">Choose file</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" onclick="UploadGallery();">Upload</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/setting/banner.js")"></script>
}
   