@{
    ViewData["Title"] = "Jenis Program";
}
<section id="JenisProgram">
    <div class="row mb-1">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card border-light">
                <div class="card-header pb-0">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Cari</label>
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control form-control-sm" id="JenisProgram-Search" onchange="listJenisProgram()" placeholder="Jenis Program" aria-describedby="basic-addon7">
                            </div>
                        </div>
                        <div class=" col-md-8 d-flex justify-content-end align-self-end">
                            <a href="#" class="btn btn-info" id="JenisProgram-AddBtn"><i class="ft-plus-circle icon-left"></i><span>Tambah</span></a>
                        </div>
                    </div>
                    <hr />
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped table-hover" id="JenisProgram-table">
                                    <thead class="bg-info white text-center">
                                        <tr>
                                            <th width="10%" class="text-center">No</th>
                                            <th>Nama Jenis</th>
                                            <th width="5%">Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody id="JenisProgram-tbody">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-1 justify-content-between">
                        <div class="col-md-7 align-self-center">
                            <span class="d-inline-block mr-1">
                                <select class="form-control form-control-sm" id="JenisProgram-page_select">
                                    <option value="5">5</option>
                                    <option value="10" selected>10</option>
                                    <option value="20">20</option>
                                    <option value="50">50</option>
                                </select>
                            </span>
                            <span>
                                Showing <b id="JenisProgram-from_page"></b> To <b id="JenisProgram-to_page"></b> From <b id="JenisProgram-total"></b> Total Data
                            </span>
                        </div>
                        <div class="col-md-5 align-self-center">
                            <div class="float-right xs-1" id="JenisProgram-pagination"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="modal" tabindex="-1" role="dialog" id="md-JenisProgram-Add">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white">Add Jenis Program</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <label class="mb-1 font-weight-bold">Nama Program</label>
                        <input id="Add-JenisProgram-Nama" class="form-control form-control-sm clear">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btn-sm text-center" onclick="addJenisProgramSave();">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="md-JenisProgram-Edit">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white">Edit Jenis Program</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <label class="mb-1 font-weight-bold">Nama Program</label>
                        <input id="Edit-JenisProgram-Nama" class="form-control form-control-sm clear">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btn-sm text-center" onclick="editJenisProgramSave();">Save</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/setting/jenisprogram.js")"></script>
}